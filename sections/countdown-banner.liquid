{%- liquid
  assign end_date = section.settings.end_date
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign background_image = section.settings.background_image
-%}

<section
  class="countdown-banner"
  style="
    --countdown-bg-color: {{ section.settings.background_color }};
    --countdown-text-color: {{ section.settings.text_color }};
    --countdown-box-bg: {{ section.settings.timer_background }};
    --countdown-box-text: {{ section.settings.timer_text_color }};
  "
>
  {%- if background_image != blank -%}
    <div class="countdown-banner__bg-image">
      {{ background_image | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'countdown-banner__image' }}
    </div>
  {%- endif -%}

  <div class="countdown-banner__inner page-width">
    <div class="countdown-banner__content">
      {%- if heading != blank -%}
        <h2 class="countdown-banner__heading">{{ heading }}</h2>
      {%- endif -%}
      {%- if subheading != blank -%}
        <p class="countdown-banner__subheading">{{ subheading }}</p>
      {%- endif -%}
    </div>

    <div class="countdown-banner__timer" data-end-date="{{ end_date }}">
      <div class="countdown-banner__timer-box">
        <span class="countdown-banner__number" data-days>0</span>
        <span class="countdown-banner__label">DAYS</span>
      </div>
      <div class="countdown-banner__timer-box">
        <span class="countdown-banner__number" data-hours>0</span>
        <span class="countdown-banner__label">HOURS</span>
      </div>
      <div class="countdown-banner__timer-box">
        <span class="countdown-banner__number" data-minutes>0</span>
        <span class="countdown-banner__label">MINUTES</span>
      </div>
      <div class="countdown-banner__timer-box">
        <span class="countdown-banner__number" data-seconds>0</span>
        <span class="countdown-banner__label">SECONDS</span>
      </div>
    </div>
  </div>
</section>

<script>
  (function() {
    const timer = document.querySelector('.countdown-banner__timer');
    if (!timer) return;

    const endDate = new Date(timer.dataset.endDate).getTime();
    const daysEl = timer.querySelector('[data-days]');
    const hoursEl = timer.querySelector('[data-hours]');
    const minutesEl = timer.querySelector('[data-minutes]');
    const secondsEl = timer.querySelector('[data-seconds]');

    function updateCountdown() {
      const now = new Date().getTime();
      const distance = endDate - now;

      if (distance < 0) {
        daysEl.textContent = '0';
        hoursEl.textContent = '0';
        minutesEl.textContent = '0';
        secondsEl.textContent = '0';
        return;
      }

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      daysEl.textContent = days;
      hoursEl.textContent = hours;
      minutesEl.textContent = minutes;
      secondsEl.textContent = seconds;
    }

    updateCountdown();
    setInterval(updateCountdown, 1000);
  })();
</script>

{% stylesheet %}
  .countdown-banner {
    position: relative;
    background: var(--countdown-bg-color);
    padding: 40px 0;
    overflow: hidden;
  }

  .countdown-banner__bg-image {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .countdown-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .countdown-banner__inner {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 30px;
  }

  .countdown-banner__content {
    flex: 1;
  }

  .countdown-banner__heading {
    margin: 0 0 8px;
    font-family: var(--font-heading--family);
    font-size: clamp(28px, 4vw, 42px);
    font-weight: 500;
    color: var(--countdown-text-color);
    line-height: 1.2;
  }

  .countdown-banner__subheading {
    margin: 0;
    font-size: 16px;
    color: var(--countdown-text-color);
    opacity: 0.9;
    line-height: 1.5;
    max-width: 400px;
  }

  .countdown-banner__timer {
    display: flex;
    gap: 4px;
    background: var(--countdown-box-bg);
    padding: 20px 30px;
    border-radius: 4px;
  }

  .countdown-banner__timer-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 70px;
    padding: 0 15px;
    border-right: 1px solid rgba(0, 0, 0, 0.1);
  }

  .countdown-banner__timer-box:last-child {
    border-right: none;
  }

  .countdown-banner__number {
    font-size: 36px;
    font-weight: 500;
    color: var(--countdown-box-text);
    line-height: 1;
  }

  .countdown-banner__label {
    font-size: 11px;
    color: var(--countdown-box-text);
    opacity: 0.7;
    margin-top: 8px;
    letter-spacing: 0.05em;
  }

  @media screen and (max-width: 899px) {
    .countdown-banner__inner {
      flex-direction: column;
      text-align: center;
    }

    .countdown-banner__subheading {
      max-width: 100%;
    }

    .countdown-banner__timer {
      padding: 15px 20px;
    }

    .countdown-banner__timer-box {
      min-width: 55px;
      padding: 0 10px;
    }

    .countdown-banner__number {
      font-size: 28px;
    }
  }
{% endstylesheet %}

