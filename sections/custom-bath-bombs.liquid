<section
  class="bath-bombs-section"
  style="
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="container">
    <div class="text-center">
      <h2 style="font-weight: bold; font-size: 26px;">
        {{ section.settings.heading }}
      </h2>
      <p>{{ section.settings.description }}</p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Bath Bombs Info",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Bath Bombs, Skincare & Home Treats"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "At Bella Forever, we bring you the best in self-careâ€”from soothing bath bombs to nourishing skincare and cosy home essentials. Carefully selected for quality, safety, and feel-good results, our products are designed to help you relax, refresh, and treat yourself or someone special. Discover the perfect way to turn everyday routines into moments of joy."
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Bath Bombs Info Section"
    }
  ]
}
{% endschema %}
