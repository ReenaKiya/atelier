{%- liquid
  assign speed = section.settings.speed
  assign icon_size = section.settings.icon_size
  assign border_color = section.settings.border_color
  assign bg_color = section.settings.background_color
-%}

<section
  class="icon-marquee"
  style="
    --im-speed: {{ speed }}s;
    --im-icon-size: {{ icon_size }}px;
    --im-border-color: {{ border_color }};
    --im-bg: {{ bg_color }};
    --im-padding-top: {{ section.settings.padding_top }}px;
    --im-padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="icon-marquee__wrapper">
    <div class="icon-marquee__track">
      {%- for block in section.blocks -%}
        <div class="icon-marquee__item" {{ block.shopify_attributes }}>
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="icon-marquee__link">
          {%- endif -%}
            <div class="icon-marquee__circle">
              {%- if block.settings.image != blank -%}
                {{ block.settings.image | image_url: width: 200 | image_tag: class: 'icon-marquee__img', loading: 'lazy', alt: block.settings.label }}
              {%- else -%}
                <span class="icon-marquee__placeholder"></span>
              {%- endif -%}
            </div>
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}

      {%- for block in section.blocks -%}
        <div class="icon-marquee__item" aria-hidden="true">
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="icon-marquee__link" tabindex="-1">
          {%- endif -%}
            <div class="icon-marquee__circle">
              {%- if block.settings.image != blank -%}
                {{ block.settings.image | image_url: width: 200 | image_tag: class: 'icon-marquee__img', loading: 'lazy', alt: block.settings.label }}
              {%- else -%}
                <span class="icon-marquee__placeholder"></span>
              {%- endif -%}
            </div>
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .icon-marquee {
    background: var(--im-bg);
    padding-top: var(--im-padding-top);
    padding-bottom: var(--im-padding-bottom);
    overflow: hidden;
  }

  .icon-marquee__wrapper {
    overflow: hidden;
    width: 100%;
  }

  .icon-marquee__track {
    display: flex;
    align-items: center;
    gap: 30px;
    animation: icon-marquee-scroll var(--im-speed, 20s) linear infinite;
    width: max-content;
  }

  .icon-marquee__wrapper:hover .icon-marquee__track {
    animation-play-state: paused;
  }

  .icon-marquee__item {
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .icon-marquee__link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .icon-marquee__circle {
    width: var(--im-icon-size);
    height: var(--im-icon-size);
    border-radius: 50%;
    border: 1px solid var(--im-border-color);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #fff;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }

  .icon-marquee__item:hover .icon-marquee__circle {
    transform: scale(1.05);
  }

  .icon-marquee__img {
    width: 60%;
    height: 60%;
    object-fit: contain;
  }

  .icon-marquee__placeholder {
    width: 40%;
    height: 40%;
    background: #ddd;
    border-radius: 50%;
  }

  @keyframes icon-marquee-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 749px) {
    .icon-marquee__track {
      gap: 20px;
    }
  }
{% endstylesheet %}

