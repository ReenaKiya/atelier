

<section class="valentine-hero">
  <div class="valentine-container">

    <div class="valentine-content">
      <h2>{{ section.settings.heading | newline_to_br }}</h2>
      <p>{{ section.settings.subtext }}</p>

      {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="valentine-btn">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>

    <div class="valentine-images">
      {% if section.settings.image_1 != blank %}
        <div class="polaroid rotate-left">
          <img src="{{ section.settings.image_1 | image_url: width: 400 }}" alt="">
        </div>
      {% endif %}

      {% if section.settings.image_2 != blank %}
        <div class="polaroid rotate-center">
          <img src="{{ section.settings.image_2 | image_url: width: 400 }}" alt="">
        </div>
      {% endif %}

      {% if section.settings.image_3 != blank %}
        <div class="polaroid rotate-right">
          <img src="{{ section.settings.image_3 | image_url: width: 400 }}" alt="">
        </div>
      {% endif %}
    </div>

  </div>
</section>




{% schema %}
{
  "name": "Valentine Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Piercing and Earring\nValentine's Day Gifts"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Sub Text",
      "default": "Gift Titanium & Gold Piercing Jewellery at 30% Off This Valentineâ€™s Day"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Buy now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Middle Image"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Right Image"
    }
  ],
  "presets": [
    {
      "name": "Valentine Hero"
    }
  ]
}
{% endschema %}

<style>
.valentine-hero {
  background: #b91c1c;
  padding: 80px 40px;
  color: white;
}

.valentine-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 60px;
  max-width: 1400px;
  margin: auto;
}

.valentine-content {
  max-width: 550px;
}

.valentine-content h2 {
  font-family: cursive;
  font-size: 48px;
  line-height: 1.3;
  margin-bottom: 20px;
}

.valentine-content p {
  font-size: 18px;
  margin-bottom: 30px;
}

.valentine-btn {
  display: inline-block;
  background: white;
  color: #b91c1c;
  padding: 12px 28px;
  border-radius: 50px;
  text-decoration: none;
  font-weight: bold;
}

.valentine-images {
  position: relative;
  display: flex;
  align-items: center;
}

.polaroid {
  background: white;
  padding: 10px;
  border-radius: 8px;
  box-shadow: 0 10px 25px rgba(0,0,0,0.2);
  position: relative;
}

.polaroid img {
  display: block;
  border-radius: 6px;
}

.rotate-left {
  transform: rotate(-10deg);
  z-index: 1;
}

.rotate-center {
  margin: 0 -40px;
  transform: rotate(0deg);
  z-index: 2;
}

.rotate-right {
  transform: rotate(10deg);
  z-index: 1;
}

@media (max-width: 990px) {
  .valentine-container {
    flex-direction: column;
    text-align: center;
  }

  .valentine-images {
    margin-top: 40px;
  }
}
</style>
