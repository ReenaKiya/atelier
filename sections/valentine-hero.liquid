

<section
  class="valentine-hero"
  style="background-image: url({{ section.settings.bg_image | image_url: width: 2000 }});"
>
  <div class="valentine-hero__overlay">
    <div class="valentine-hero__content">
      <h1 class="typing-text" data-text="{{ section.settings.heading }}"></h1>
      <p>{{ section.settings.subtext }}</p>
    </div>
  </div>
</section>




{% schema %}
{
  "name": "Valentine Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Valentine Specials"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Sub Text",
      "default": "Celebrate love with our exclusive collection."
    }
  ],
  "presets": [
    {
      "name": "Valentine Hero"
    }
  ]
}
{% endschema %}








<style>
.valentine-hero {
 position: relative;
    background-size: contain;
    background-position: center;
    height: 500px;
    display: flex;
    align-items: center;
}

.valentine-hero__overlay {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start; /* Move content to LEFT */
  padding-left: 60px;
}



.valentine-hero__content {
  max-width: 500px;
}

.valentine-hero__content h1 {
  font-family: 'Allura', cursive;
  font-size: 60px;
  color: #fff;
  overflow-wrap: break-word;
  line-height: 1.3;
  white-space: normal; /* Allows multiple lines */
}

.valentine-hero__content {
  max-width: 500px; /* Controls line break */
}

.typing-text {
  font-family: 'Allura', cursive;
  font-size: 60px;
  color: #ffffff; /* White color */
  line-height: 1.3;
  overflow-wrap: break-word;
  white-space: normal;
  margin: 0;
}


.valentine-hero__content p {
  font-size: 18px;
  line-height: 1.6;
}

/* Responsive */
@media screen and (max-width: 768px) {
  .valentine-hero {
    min-height: 70vh;
  }

  .valentine-hero__overlay {
    padding: 40px 20px;
    justify-content: center;
    text-align: center;
  }





  .valentine-hero__overlay {
  width: 100%;
  padding: 80px 60px;
  display: flex;
  justify-content: flex-start; /* LEFT SIDE */
}

.valentine-hero__content {
  max-width: 600px;
  color: #ffffff;
}

.typing-text {
  font-size: 60px;
  font-family: 'Allura', cursive;
  font-weight: 400;
  margin-bottom: 20px;
  white-space: nowrap;
  border-right: 3px solid #fff;
  overflow: hidden;
}

}




</style>



<script>
document.addEventListener("DOMContentLoaded", function () {
  const heading = document.querySelector(".typing-text");
  const text = heading.getAttribute("data-text");
  let index = 0;

  function typeEffect() {
    if (index < text.length) {
      heading.innerHTML += text.charAt(index);
      index++;
      setTimeout(typeEffect, 80);
    }
  }

  heading.innerHTML = "";
  typeEffect();
});
</script>


