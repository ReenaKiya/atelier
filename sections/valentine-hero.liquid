<section
  class="valentine-hero"
  style="background-image: url({{ section.settings.bg_image | image_url: width: 2000 }});"
>
  <div class="valentine-hero__overlay">
    <div class="valentine-hero__left">

      <!-- Typing Heading -->
      <h1 class="typing-text">
        <span class="typed-output"></span>
        <span class="cursor">|</span>
      </h1>

      <!-- Paragraph -->
      <p class="hero-subtext">
        {{ section.settings.subtext }}
      </p>

      <!-- Buy Now Button -->
      <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="hero-btn">
        {{ section.settings.button_text | default: 'Buy now' }}
      </a>

    </div>

    <!-- Right Side: Polaroid Images -->
    <div class="valentine-hero__right">
      {% for block in section.blocks %}
        <div class="valentine-hero__polaroid valentine-hero__polaroid--{{ forloop.index }}" {{ block.shopify_attributes }}>
          <div class="valentine-hero__polaroid-inner">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 400 | image_tag: class: 'valentine-hero__polaroid-img', loading: 'eager' }}
            {% else %}
              <div class="valentine-hero__polaroid-placeholder"></div>
            {% endif %}
          </div>
          {% if block.settings.label != blank %}
            <span class="valentine-hero__polaroid-label">{{ block.settings.label }}</span>
          {% endif %}
          <!-- Decorative Hearts -->
          <span class="valentine-hero__heart valentine-hero__heart--1">&#10084;</span>
          <span class="valentine-hero__heart valentine-hero__heart--2">&#10084;</span>
          <span class="valentine-hero__heart valentine-hero__heart--3">&#10084;</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>





{% schema %}
{
  "name": "Valentine Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Piercing and Earring Valentine's"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Sub Text",
      "default": "Gift Titanium & Gold Piercing Jewellery at 30% Off This Valentine's Day"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Buy now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "polaroid",
      "name": "Polaroid Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Product Name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Valentine Hero",
      "blocks": [
        { "type": "polaroid", "settings": { "label": "Push-Fit Flatback Stud" } },
        { "type": "polaroid", "settings": { "label": "Push-Fit Flatback Stud" } },
        { "type": "polaroid", "settings": { "label": "Gold Nose Hoop" } }
      ]
    }
  ]
}
{% endschema %}





<style>
.valentine-hero {
  position: relative;
  background-size: contain;
  background-position: center;
  height: 500px;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.valentine-hero__overlay {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 60px;
}

/* Left Content */
.valentine-hero__left {
  max-width: 600px;
  flex-shrink: 0;
}

/* Typing Heading */
.typing-text {
  font-family: 'Allura', cursive;
  font-size: 58px;
  color: #ffffff;
  line-height: 1.3;
  margin-bottom: 20px;
  white-space: normal;
  height: 156px;
  max-height: 156px;
  overflow: hidden;
}

/* Blinking Cursor */
.cursor {
  display: inline-block;
  margin-left: 5px;
  animation: blink 1s infinite;
}

@keyframes blink {
  0% { opacity: 1; }
  50% { opacity: 0; }
  100% { opacity: 1; }
}

/* Paragraph White */
.hero-subtext {
  font-family: 'Nunito Sans', sans-serif;
  font-style: italic;
  color: #ffffff;
  font-size: 18px;
  margin-bottom: 25px;
}

/* Button */
.hero-btn {
  display: inline-block;
  padding: 10px 20px;
  background-color: #ffffff;
  color: #db1e37;
  font-size: 16px;
  font-family: "Bagel Fat One", sans-serif;
  font-weight: 400;
  font-style: normal;
  border: 1px solid #ffffff;
  border-radius: 50px;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.hero-btn:hover {
  background: #000000;
  color: #ffffff;
}

/* Right Side â€“ Polaroid Images */
.valentine-hero__right {
  position: relative;
  width: 550px;
  height: 380px;
  flex-shrink: 0;
  margin-right: 40px;
}

/* Polaroid Card */
.valentine-hero__polaroid {
  position: absolute;
  background: #fff;
  padding: 10px 10px 35px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
  transition: transform 0.3s ease;
}

.valentine-hero__polaroid:hover {
  transform: scale(1.05);
  z-index: 10;
}

.valentine-hero__polaroid-inner {
  width: 180px;
  height: 160px;
  overflow: hidden;
}

.valentine-hero__polaroid-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.valentine-hero__polaroid-placeholder {
  width: 100%;
  height: 100%;
  background: #f0e0e0;
}

.valentine-hero__polaroid-label {
  display: block;
  text-align: center;
  font-family: 'Allura', cursive;
  font-size: 16px;
  color: #333;
  margin-top: 8px;
  white-space: nowrap;
}

/* Polaroid Positions & Rotations */
.valentine-hero__polaroid--1 {
  top: 30px;
  left: 0;
  transform: rotate(-8deg);
  z-index: 1;
}

.valentine-hero__polaroid--2 {
  top: 10px;
  left: 180px;
  transform: rotate(3deg);
  z-index: 2;
}

.valentine-hero__polaroid--3 {
  top: 30px;
  right: 0;
  transform: rotate(8deg);
  z-index: 3;
}

/* Decorative Hearts */
.valentine-hero__heart {
  position: absolute;
  color: #e74c6f;
  font-size: 14px;
  pointer-events: none;
  z-index: 5;
}

.valentine-hero__heart--1 {
  top: -10px;
  left: 10px;
  font-size: 12px;
  color: #ff8fab;
}

.valentine-hero__heart--2 {
  bottom: 40px;
  left: -8px;
  font-size: 10px;
  color: #e74c6f;
}

.valentine-hero__heart--3 {
  top: -5px;
  right: 10px;
  font-size: 16px;
  color: #ff6b8a;
}

/* Responsive */
@media screen and (max-width: 999px) {
  .valentine-hero {
    height: auto;
    min-height: 450px;
  }

  .valentine-hero__overlay {
    flex-direction: column;
    padding: 40px 30px;
    gap: 30px;
    text-align: center;
  }

  .valentine-hero__left {
    max-width: 100%;
  }

  .valentine-hero__right {
    position: relative;
    width: 100%;
    height: 280px;
    margin-right: 0;
    display: flex;
    justify-content: center;
  }

  .valentine-hero__polaroid-inner {
    width: 140px;
    height: 120px;
  }

  .valentine-hero__polaroid--1 {
    top: 20px;
    left: 5%;
  }

  .valentine-hero__polaroid--2 {
    top: 0;
    left: 33%;
  }

  .valentine-hero__polaroid--3 {
    top: 20px;
    right: 5%;
    left: auto;
  }
}

@media screen and (max-width: 600px) {
  .valentine-hero__right {
    height: 220px;
  }

  .valentine-hero__polaroid-inner {
    width: 110px;
    height: 95px;
  }

  .valentine-hero__polaroid-label {
    font-size: 13px;
  }

  .typing-text {
    font-size: 42px;
    height: 110px;
    max-height: 110px;
  }
}
</style>





<script>
document.addEventListener("DOMContentLoaded", function () {

  const text = "{{ section.settings.heading }}";
  const output = document.querySelector(".typed-output");

  let index = 0;
  let isDeleting = false;

  function typeEffect() {
    if (!isDeleting) {
      /* Typing forward */
      if (index < text.length) {
        output.innerHTML += text.charAt(index);
        index++;
        setTimeout(typeEffect, 80);
      } else {
        /* Pause before deleting */
        isDeleting = true;
        setTimeout(typeEffect, 1500);
      }
    } else {
      /* Deleting backward */
      if (index > 0) {
        index--;
        output.innerHTML = text.substring(0, index);
        setTimeout(typeEffect, 40);
      } else {
        /* Pause before typing again */
        isDeleting = false;
        setTimeout(typeEffect, 500);
      }
    }
  }

  typeEffect();

});
</script>




