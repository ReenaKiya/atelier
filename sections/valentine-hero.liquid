

<section
  class="valentine-hero"
  style="
    background-image: url({{ section.settings.bg_image | image_url: width: 2000 }});
  "
>
  <div class="valentine-hero__overlay">
    <div class="valentine-hero__content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subtext }}</p>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Valentine Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Valentine Specials"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Sub Text",
      "default": "Celebrate love with our exclusive collection."
    }
  ],
  "presets": [
    {
      "name": "Valentine Hero"
    }
  ]
}
{% endschema %}








<style>
.valentine-hero {
  position: relative;
  min-height: 100vh;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
}

.valentine-hero__overlay {
  width: 100%;
  padding: 80px 60px;
  display: flex;
  justify-content: flex-end; /* Push content to right */
}

.valentine-hero__content {
  max-width: 400px;
  color: #ffffff;
}

.valentine-hero__content h2 {
  font-size: 48px;
  font-weight: 600;
  margin-bottom: 15px;
}

.valentine-hero__content p {
  font-size: 18px;
  line-height: 1.6;
}

/* Responsive */
@media screen and (max-width: 768px) {
  .valentine-hero {
    min-height: 70vh;
  }

  .valentine-hero__overlay {
    padding: 40px 20px;
    justify-content: center;
    text-align: center;
  }
}
</style>
