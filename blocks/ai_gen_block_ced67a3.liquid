{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-content-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-text-content__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.spacing }}px 0;
    font-weight: 700;
    line-height: 1.2;
  }

  .ai-text-content__paragraph-{{ ai_gen_id }} {
    font-size: {{ block.settings.paragraph_size }}px;
    color: {{ block.settings.paragraph_color }};
    line-height: 1.6;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-text-content-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-text-content__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-text-content__paragraph-{{ ai_gen_id }} {
      font-size: {{ block.settings.paragraph_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-text-content-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-text-content__heading-{{ ai_gen_id }}">
      {{ block.settings.heading }}
    </h2>
  {% endif %}

  {% if block.settings.paragraph != blank %}
    <div class="ai-text-content__paragraph-{{ ai_gen_id }}">
      {{ block.settings.paragraph }}
    </div>
  {% endif %}
</div>

