{% doc %}
  @prompt
    Create a custom section with a background image that includes:
    - A title positioned on the left side above the carousel
    - Collection navigation tabs on the right side that act as filters
    - A product carousel in the center-right area that dynamically changes based on which collection tab is selected
    - The carousel should display products from the selected collection
    - Smooth transitions when switching between collection tabs
    - Mobile-responsive layout where title and tabs stack vertically on smaller screens
    - Customizable background image, title text, and collection selections in the theme editor
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-carousel-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;

    height: 466px;
  }

  .ai-collection-carousel-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
  }

  .ai-collection-carousel-container-{{ ai_gen_id }} {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .ai-collection-carousel-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 40px;
    gap: 20px;
  }

  .ai-collection-carousel-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0;
    flex: 0 0 auto;
  }

  .ai-collection-carousel-tabs-{{ ai_gen_id }} {
    display: flex;
    gap: 24px;
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  .ai-collection-carousel-tab-{{ ai_gen_id }} {
    background: none;
    border: none;
    color: {{ block.settings.tab_color }};
    font-size: {{ block.settings.tab_size }}px;
    cursor: pointer;
    padding: 8px 0;
    position: relative;
    transition: color 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-collection-carousel-tab-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: {{ block.settings.tab_active_color }};
    transition: width 0.3s ease;
  }

  .ai-collection-carousel-tab-{{ ai_gen_id }}.active {
    color: {{ block.settings.tab_active_color }};
  }

  .ai-collection-carousel-tab-{{ ai_gen_id }}.active::after {
    width: 100%;
  }

  .ai-collection-carousel-tab-{{ ai_gen_id }}:hover {
    color: {{ block.settings.tab_active_color }};
  }

  .ai-collection-carousel-content-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-collection-carousel-track-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.products_per_row }}, 1fr);
    gap: 24px;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .ai-collection-carousel-track-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-collection-carousel-track-{{ ai_gen_id }}.hidden {
    display: none;
  }

  .ai-collection-carousel-product-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .ai-collection-carousel-product-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-collection-carousel-product-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 125%;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-collection-carousel-product-image-{{ ai_gen_id }} img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-carousel-product-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
  }

  .ai-collection-carousel-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collection-carousel-product-info-{{ ai_gen_id }} {
    padding: 16px;
  }

  .ai-collection-carousel-product-title-{{ ai_gen_id }} {
    color: {{ block.settings.product_title_color }};
    font-size: {{ block.settings.product_title_size }}px;
    margin: 0 0 8px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .ai-collection-carousel-product-price-{{ ai_gen_id }} {
    color: {{ block.settings.product_price_color }};
    font-size: {{ block.settings.product_price_size }}px;
    font-weight: 600;
  }

  .ai-collection-carousel-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.title_color }};
    font-size: 16px;
  }

  @media screen and (max-width: 989px) {
    .ai-collection-carousel-container-{{ ai_gen_id }} {
      padding: 0 24px;
    }

    .ai-collection-carousel-header-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
      margin-bottom: 32px;
    }

    .ai-collection-carousel-tabs-{{ ai_gen_id }} {
      justify-content: flex-start;
      width: 100%;
    }

    .ai-collection-carousel-track-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    .ai-collection-carousel-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collection-carousel-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-collection-carousel-track-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-collection-carousel-tabs-{{ ai_gen_id }} {
      gap: 16px;
    }

    .ai-collection-carousel-tab-{{ ai_gen_id }} {
      font-size: {{ block.settings.tab_size | times: 0.9 }}px;
    }
  }

