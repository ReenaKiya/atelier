<collection-carousel-{{ ai_gen_id }}
  class="ai-collection-carousel-{{ ai_gen_id }}"
  style="{% if block.settings.background_image %}background-image: url('{{ block.settings.background_image | image_url: width: 2000 }}');{% else %}background-color: {{ block.settings.background_color }};{% endif %}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.background_image and block.settings.overlay_opacity > 0 %}
    <div class="ai-collection-carousel-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-collection-carousel-container-{{ ai_gen_id }}">
    <div class="ai-collection-carousel-header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-collection-carousel-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}

      <div class="ai-collection-carousel-tabs-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign collection_key = 'collection_' | append: i
            assign collection = block.settings[collection_key]
          %}
          {% if collection != blank %}
            <button
              class="ai-collection-carousel-tab-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
              data-collection-index="{{ forloop.index0 }}"
              aria-label="View {{ collection.title }}"
            >
              {{ collection.title }}
            </button>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="ai-collection-carousel-content-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign collection_key = 'collection_' | append: i
          assign collection = block.settings[collection_key]
        %}
        {% if collection != blank %}
          <div
            class="ai-collection-carousel-track-{{ ai_gen_id }} {% if forloop.first %}active{% else %}hidden{% endif %}"
            data-collection-track="{{ forloop.index0 }}"
          >
            {% if collection.products.size > 0 %}
              {% for product in collection.products limit: block.settings.products_to_show %}
                <a
                  href="{{ product.url }}"
                  class="ai-collection-carousel-product-{{ ai_gen_id }}"
                >
                  <div class="ai-collection-carousel-product-image-{{ ai_gen_id }}">
                    {% if product.featured_image %}
                      <img
                        src="{{ product.featured_image | image_url: width: 600 }}"
                        alt="{{ product.featured_image.alt | escape }}"
                        loading="lazy"
                        width="600"
                        height="750"
                      >
                    {% else %}
                      <div class="ai-collection-carousel-product-image-placeholder-{{ ai_gen_id }}">
                        {{ 'product-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                  <div class="ai-collection-carousel-product-info-{{ ai_gen_id }}">
                    <h3 class="ai-collection-carousel-product-title-{{ ai_gen_id }}">
                      {{ product.title }}
                    </h3>
                    <div class="ai-collection-carousel-product-price-{{ ai_gen_id }}">
                      {{ product.price | money }}
                    </div>
                  </div>
                </a>
              {% endfor %}
            {% else %}
              <div class="ai-collection-carousel-empty-{{ ai_gen_id }}">
                No products found in this collection
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</collection-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-collection-carousel-tab-{{ ai_gen_id }}');
        this.tracks = this.querySelectorAll('.ai-collection-carousel-track-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const collectionIndex = parseInt(tab.getAttribute('data-collection-index'));
            this.switchCollection(collectionIndex);
          });
        });
      }

      switchCollection(index) {
        this.tabs.forEach((tab, i) => {
          if (i === index) {
            tab.classList.add('active');
          } else {
            tab.classList.remove('active');
          }
        });

        this.tracks.forEach((track) => {
          const trackIndex = parseInt(track.getAttribute('data-collection-track'));
          if (trackIndex === index) {
            track.classList.remove('hidden');
            setTimeout(() => {
              track.classList.add('active');
            }, 10);
          } else {
            track.classList.remove('active');
            setTimeout(() => {
              track.classList.add('hidden');
            }, 400);
          }
        });
      }
    }

    customElements.define('collection-carousel-{{ ai_gen_id }}', CollectionCarousel{{ ai_gen_id }});
  })();
</script>

