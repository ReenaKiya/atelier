<script>
  (function() {
    class StyleCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentTab = 1;
        this.carouselPositions = {};
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-style-carousel__tab-{{ ai_gen_id }}');
        this.backgrounds = this.querySelectorAll('[class*="ai-style-carousel__background-"][data-tab-index]');
        this.carousels = this.querySelectorAll('[data-carousel-index]');
        this.prevButtons = this.querySelectorAll('.ai-style-carousel__prev-{{ ai_gen_id }}');
        this.nextButtons = this.querySelectorAll('.ai-style-carousel__next-{{ ai_gen_id }}');

        this.carousels.forEach((carousel) => {
          const index = carousel.dataset.carouselIndex;
          this.carouselPositions[index] = 0;
        });

        this.setupTabListeners();
        this.setupCarouselListeners();
        this.updateCarouselButtons();
      }

      setupTabListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const tabIndex = parseInt(tab.dataset.tabIndex);
            this.switchTab(tabIndex);
          });
        });
      }

      switchTab(tabIndex) {
        this.currentTab = tabIndex;

        this.tabs.forEach((tab) => {
          if (parseInt(tab.dataset.tabIndex) === tabIndex) {
            tab.classList.add('active');
          } else {
            tab.classList.remove('active');
          }
        });

        this.backgrounds.forEach((bg) => {
          if (parseInt(bg.dataset.tabIndex) === tabIndex) {
            bg.classList.add('active');
          } else {
            bg.classList.remove('active');
          }
        });

        this.carousels.forEach((carousel) => {
          if (parseInt(carousel.dataset.carouselIndex) === tabIndex) {
            carousel.style.display = 'block';
            setTimeout(() => {
              this.updateVisibleCards(tabIndex);
            }, 50);
          } else {
            carousel.style.display = 'none';
          }
        });

        this.updateCarouselButtons();
      }

      setupCarouselListeners() {
        this.prevButtons.forEach((btn) => {
          btn.addEventListener('click', () => {
            const carouselIndex = btn.dataset.carousel;
            this.moveCarousel(carouselIndex, -1);
          });
        });

        this.nextButtons.forEach((btn) => {
          btn.addEventListener('click', () => {
            const carouselIndex = btn.dataset.carousel;
            this.moveCarousel(carouselIndex, 1);
          });
        });
      }

      moveCarousel(carouselIndex, direction) {
        const track = this.querySelector(`[data-track="${carouselIndex}"]`);
        if (!track) return;

        const cards = track.querySelectorAll('.ai-style-carousel__card-{{ ai_gen_id }}');
        const cardsPerView = this.getCardsPerView();
        const totalCards = cards.length;

        this.carouselPositions[carouselIndex] = (this.carouselPositions[carouselIndex] || 0) + direction;

        if (this.carouselPositions[carouselIndex] < 0) {
          this.carouselPositions[carouselIndex] = 0;
        }

        const maxPosition = Math.max(0, totalCards - cardsPerView);
        if (this.carouselPositions[carouselIndex] > maxPosition) {
          this.carouselPositions[carouselIndex] = maxPosition;
        }

        this.updateVisibleCards(carouselIndex);
        this.updateCarouselButtons();
      }

      updateVisibleCards(carouselIndex) {
        const track = this.querySelector(`[data-track="${carouselIndex}"]`);
        if (!track) return;

        const cards = track.querySelectorAll('.ai-style-carousel__card-{{ ai_gen_id }}');
        const cardsPerView = this.getCardsPerView();
        const position = this.carouselPositions[carouselIndex] || 0;

        cards.forEach((card, index) => {
          if (index >= position && index < position + cardsPerView) {
            card.classList.add('active');
          } else {
            card.classList.remove('active');
          }
        });

        const cardWidth = cards[0] ? cards[0].offsetWidth : 0;
        const gap = {{ block.settings.card_gap }};
        const offset = position * (cardWidth + gap);
        track.style.transform = `translateX(-${offset}px)`;
      }

      updateCarouselButtons() {
        this.carousels.forEach((carousel) => {
          const carouselIndex = carousel.dataset.carouselIndex;
          const track = carousel.querySelector(`[data-track="${carouselIndex}"]`);
          if (!track) return;

          const cards = track.querySelectorAll('.ai-style-carousel__card-{{ ai_gen_id }}');
          const cardsPerView = this.getCardsPerView();
          const totalCards = cards.length;
          const position = this.carouselPositions[carouselIndex] || 0;

          const prevBtn = carousel.querySelector('.ai-style-carousel__prev-{{ ai_gen_id }}');
          const nextBtn = carousel.querySelector('.ai-style-carousel__next-{{ ai_gen_id }}');

          if (prevBtn) {
            prevBtn.disabled = position === 0;
          }

          if (nextBtn) {
            nextBtn.disabled = position >= totalCards - cardsPerView;
          }
        });
      }

      getCardsPerView() {
        const width = window.innerWidth;
        if (width <= 749) {
          return 1;
        } else if (width <= 989) {
          return {{ block.settings.cards_per_row_tablet }};
        }
        return {{ block.settings.cards_per_row }};
      }
    }

    customElements.define('style-carousel-{{ ai_gen_id }}', StyleCarousel{{ ai_gen_id }});
  })();
