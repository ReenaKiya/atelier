            <button
              class="ai-style-carousel__tab-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
              data-tab-index="{{ i }}"
              aria-label="View {{ tab_label }} collection"
            >
              {{ tab_label }}
            </button>
          {% endif %}
        {% endfor %}
      </div>
    </div>

