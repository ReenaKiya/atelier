      <div class="ai-style-carousel__intro-{{ ai_gen_id }}">
        {% if block.settings.main_title != blank %}
          <h2 class="ai-style-carousel__title-{{ ai_gen_id }}">{{ block.settings.main_title }}</h2>
        {% endif %}
        {% if block.settings.main_description != blank %}
          <div class="ai-style-carousel__description-{{ ai_gen_id }}">{{ block.settings.main_description }}</div>
        {% endif %}
      </div>

      <div class="ai-style-carousel__tabs-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign tab_enabled_key = 'tab_' | append: i | append: '_enabled'
            assign tab_label_key = 'tab_' | append: i | append: '_label'
            assign tab_enabled = block.settings[tab_enabled_key]
            assign tab_label = block.settings[tab_label_key]
