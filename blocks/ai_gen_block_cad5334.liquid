<style-carousel-{{ ai_gen_id }}
  class="ai-style-carousel-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-style-carousel__background-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign tab_enabled_key = 'tab_' | append: i | append: '_enabled'
        assign background_image_key = 'tab_' | append: i | append: '_background_image'
        assign tab_enabled = block.settings[tab_enabled_key]
        assign background_image = block.settings[background_image_key]
      %}

      {% if tab_enabled %}
        {% if background_image %}
          <img
            src="{{ background_image | image_url: width: 2000 }}"
            alt="{{ background_image.alt | escape }}"
            loading="lazy"
            width="{{ background_image.width }}"
            height="{{ background_image.height }}"
            class="ai-style-carousel__background-image-{{ ai_gen_id }} ai-style-carousel__background-{{ i }}-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            data-tab-index="{{ i }}"
          >
        {% else %}
          <div
            class="ai-style-carousel__background-placeholder-{{ ai_gen_id }} ai-style-carousel__background-{{ i }}-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            data-tab-index="{{ i }}"
          >
            {{ 'lifestyle-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>

