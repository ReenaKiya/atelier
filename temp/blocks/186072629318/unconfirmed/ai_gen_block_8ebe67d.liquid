{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-mega-menu-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
  }

  .ai-mega-menu-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    border-bottom: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-mega-menu-inner-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-mega-menu-nav-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.item_spacing }}px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .ai-mega-menu-item-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-mega-menu-link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: {{ block.settings.link_padding_vertical }}px {{ block.settings.link_padding_horizontal }}px;
    color: {{ block.settings.text_color }};
    text-decoration: none;
    font-size: {{ block.settings.font_size }}px;
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    transition: color 0.2s ease;
  }

  .ai-mega-menu-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.text_hover_color }};
  }

  .ai-mega-menu-icon-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    transition: transform 0.2s ease;
  }

  .ai-mega-menu-item-{{ ai_gen_id }}.active .ai-mega-menu-icon-{{ ai_gen_id }} {
    transform: rotate(180deg);
  }

  .ai-mega-menu-dropdown-{{ ai_gen_id }} {
    position: absolute;
    top: 100%;
    left: 0;
    width: {{ block.settings.dropdown_width }}px;
    background-color: {{ block.settings.dropdown_background }};
    border: {{ block.settings.dropdown_border_width }}px solid {{ block.settings.dropdown_border_color }};
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: opacity 0.3s ease, visibility 0.3s ease, transform 0.3s ease;
    z-index: 1000;
    display: flex;
  }

  .ai-mega-menu-item-{{ ai_gen_id }}.active .ai-mega-menu-dropdown-{{ ai_gen_id }} {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .ai-mega-menu-links-column-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ block.settings.dropdown_padding }}px;
  }

  .ai-mega-menu-image-column-{{ ai_gen_id }} {
    width: {{ block.settings.image_width }}px;
    position: relative;
    overflow: hidden;
    background-color: {{ block.settings.image_background }};
  }

  .ai-mega-menu-collection-link-{{ ai_gen_id }} {
    display: block;
    padding: {{ block.settings.collection_link_padding }}px 0;
    color: {{ block.settings.collection_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.collection_font_size }}px;
    transition: color 0.2s ease, padding-left 0.2s ease;
  }

  .ai-mega-menu-collection-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.collection_text_hover_color }};
    padding-left: 8px;
  }

  .ai-mega-menu-collection-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .ai-mega-menu-collection-image-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-mega-menu-collection-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-mega-menu-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-mega-menu-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @media screen and (max-width: 989px) {
    .ai-mega-menu-nav-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
      gap: 0;
    }

    .ai-mega-menu-item-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-mega-menu-link-{{ ai_gen_id }} {
      width: 100%;
      padding: 16px 0;
    }

    .ai-mega-menu-dropdown-{{ ai_gen_id }} {
      position: static;
      width: 100%;
      transform: none;
      border: none;
      border-top: 1px solid {{ block.settings.dropdown_border_color }};
      flex-direction: column;
    }

    .ai-mega-menu-item-{{ ai_gen_id }}.active .ai-mega-menu-dropdown-{{ ai_gen_id }} {
      transform: none;
    }

    .ai-mega-menu-image-column-{{ ai_gen_id }} {
      width: 100%;
      height: 200px;
      order: -1;
    }

    .ai-mega-menu-links-column-{{ ai_gen_id }} {
      padding: 20px 0;
    }
  }
{% endstyle %}

<mega-menu-{{ ai_gen_id }} class="ai-mega-menu-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-mega-menu-container-{{ ai_gen_id }}">
    <div class="ai-mega-menu-inner-{{ ai_gen_id }}">
      <ul class="ai-mega-menu-nav-{{ ai_gen_id }}">
        <li class="ai-mega-menu-item-{{ ai_gen_id }}" data-menu-item>
          <a href="#" class="ai-mega-menu-link-{{ ai_gen_id }}" data-menu-trigger>
            {{ block.settings.menu_title }}
            <svg class="ai-mega-menu-icon-{{ ai_gen_id }}" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <div class="ai-mega-menu-dropdown-{{ ai_gen_id }}">
            <div class="ai-mega-menu-links-column-{{ ai_gen_id }}">
              {% for i in (1..3) %}
                {% liquid
                  assign collection_key = 'collection_' | append: i
                  assign collection_title_key = 'collection_' | append: i | append: '_title'
                  assign collection_image_key = 'collection_' | append: i | append: '_image'
                  
                  assign collection = block.settings[collection_key]
                  assign collection_title = block.settings[collection_title_key]
                  assign collection_image = block.settings[collection_image_key]
                %}
                
                {% if collection != blank %}
                  <a 
                    href="{{ collection.url }}" 
                    class="ai-mega-menu-collection-link-{{ ai_gen_id }}"
                    data-collection-link="{{ i }}"
                  >
                    {% if collection_title != blank %}
                      {{ collection_title }}
                    {% else %}
                      {{ collection.title }}
                    {% endif %}
                  </a>
                {% endif %}
              {% endfor %}
            </div>
            <div class="ai-mega-menu-image-column-{{ ai_gen_id }}">
              {% for i in (1..3) %}
                {% liquid
                  assign collection_key = 'collection_' | append: i
                  assign collection_image_key = 'collection_' | append: i | append: '_image'
                  
                  assign collection = block.settings[collection_key]
                  assign collection_image = block.settings[collection_image_key]
                %}
                
                {% if collection != blank %}
                  <div 
                    class="ai-mega-menu-collection-image-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
                    data-collection-image="{{ i }}"
                  >
                    {% if collection_image %}
                      <img
                        src="{{ collection_image | image_url: width: 600 }}"
                        alt="{{ collection.title | escape }}"
                        loading="lazy"
                        width="600"
                        height="600"
                      >
                    {% elsif collection.image %}
                      <img
                        src="{{ collection.image | image_url: width: 600 }}"
                        alt="{{ collection.title | escape }}"
                        loading="lazy"
                        width="600"
                        height="600"
                      >
                    {% else %}
                      <div class="ai-mega-menu-image-placeholder-{{ ai_gen_id }}">
                        {{ 'collection-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
</mega-menu-{{ ai_gen_id }}>

<script>
  (function() {
    class MegaMenu{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.menuItem = this.querySelector('[data-menu-item]');
        this.menuTrigger = this.querySelector('[data-menu-trigger]');
        this.collectionLinks = this.querySelectorAll('[data-collection-link]');
        this.collectionImages = this.querySelectorAll('[data-collection-image]');
      }

      connectedCallback() {
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.menuTrigger.addEventListener('click', (e) => {
          e.preventDefault();
          this.toggleMenu();
        });

        this.collectionLinks.forEach((link) => {
          link.addEventListener('mouseenter', () => {
            const collectionId = link.getAttribute('data-collection-link');
            this.showCollectionImage(collectionId);
          });
        });

        document.addEventListener('click', (e) => {
          if (!this.contains(e.target)) {
            this.closeMenu();
          }
        });
      }

      toggleMenu() {
        this.menuItem.classList.toggle('active');
      }

      closeMenu() {
        this.menuItem.classList.remove('active');
      }

      showCollectionImage(collectionId) {
        this.collectionImages.forEach((image) => {
          const imageId = image.getAttribute('data-collection-image');
          if (imageId === collectionId) {
            image.classList.add('active');
          } else {
            image.classList.remove('active');
          }
        });
      }
    }

    customElements.define('mega-menu-{{ ai_gen_id }}', MegaMenu{{ ai_gen_id }});
  })();
</script>

