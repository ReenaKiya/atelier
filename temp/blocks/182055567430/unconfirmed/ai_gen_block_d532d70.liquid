{% doc %}
  @prompt
    Create an icon with text block that displays a customizable icon alongside text content. The block should allow merchants to select from common icons (like shipping, returns, secure payment, quality guarantee) or upload a custom icon, add a heading, and descriptive text. Style it to match the Dawn/Atelier theme aesthetic with clean spacing and responsive design.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-text-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  @media screen and (min-width: 750px) {
    .ai-icon-text-{{ ai_gen_id }} {
      width: {{ block.settings.desktop_width_percent }}%;
    }
  }

  .ai-icon-text-container-{{ ai_gen_id }} {
    display: flex;
    align-items: {{ block.settings.alignment }};
    gap: {{ block.settings.spacing }}px;
    flex-direction: {{ block.settings.layout }};
    text-align: {% if block.settings.layout == 'column' %}center{% else %}left{% endif %};
  }

  .ai-icon-text-icon-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
  }

  .ai-icon-text-icon-wrapper-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: {{ block.settings.icon_color }};
    fill: none;
    stroke-width: {{ block.settings.icon_stroke_width }};
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .ai-icon-text-custom-icon-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-icon-text-content-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-icon-text-heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-icon-text-description-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-icon-text-icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-icon-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.9 }}px;
    }

    .ai-icon-text-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-icon-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-icon-text-container-{{ ai_gen_id }}">
    <div class="ai-icon-text-icon-wrapper-{{ ai_gen_id }}">
      {% if block.settings.custom_icon %}
        <img
          src="{{ block.settings.custom_icon | image_url: width: 200 }}"
          alt="{{ block.settings.heading | escape }}"
          class="ai-icon-text-custom-icon-{{ ai_gen_id }}"
          loading="lazy"
          width="200"
          height="200"
        >
      {% else %}
        {% case block.settings.icon_type %}
          {% when 'shipping' %}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <rect x="1" y="3" width="15" height="13"></rect>
              <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
              <circle cx="5.5" cy="18.5" r="2.5"></circle>
              <circle cx="18.5" cy="18.5" r="2.5"></circle>
            </svg>
          {% when 'returns' %}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <polyline points="1 4 1 10 7 10"></polyline>
              <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"></path>
            </svg>
          {% when 'secure' %}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
          {% when 'quality' %}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
            </svg>
          {% when 'support' %}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
          {% when 'warranty' %}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              <polyline points="9 12 11 14 15 10"></polyline>
            </svg>
          {% when 'eco' %}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M17 8c0 3.87-3.13 7-7 7-3.87 0-7-3.13-7-7 0-3.87 3.13-7 7-7 3.87 0 7 3.13 7 7z"></path>
              <path d="M12 15v7"></path>
              <path d="M8 19h8"></path>
            </svg>
          {% when 'gift' %}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <polyline points="20 12 20 22 4 22 4 12"></polyline>
              <rect x="2" y="7" width="20" height="5"></rect>
              <line x1="12" y1="22" x2="12" y2="7"></line>
              <path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"></path>
              <path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"></path>
            </svg>
        {% endcase %}
      {% endif %}
    </div>

    <div class="ai-icon-text-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h3 class="ai-icon-text-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h3>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-icon-text-description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Icon with text",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Icon"
    },
    {
      "type": "select",
      "id": "icon_type",
      "label": "Icon",
      "options": [
        {
          "value": "shipping",
          "label": "Shipping"
        },
        {
          "value": "returns",
          "label": "Returns"
        },
        {
          "value": "secure",
          "label": "Secure payment"
        },
        {
          "value": "quality",
          "label": "Quality guarantee"
        },
        {
          "value": "support",
          "label": "Customer support"
        },
        {
          "value": "warranty",
          "label": "Warranty"
        },
        {
          "value": "eco",
          "label": "Eco-friendly"
        },
        {
          "value": "gift",
          "label": "Gift"
        }
      ],
      "default": "shipping"
    },
    {
      "type": "image_picker",
      "id": "custom_icon",
      "label": "Custom icon",
      "info": "Overrides the selected icon above"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 20,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Icon size",
      "default": 48
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "icon_stroke_width",
      "min": 1,
      "max": 3,
      "step": 0.5,
      "label": "Icon stroke width",
      "default": 1.5
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Free shipping"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "On orders over $50"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 12,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 16
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 10,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Description size",
      "default": 12
    },
    {
      "type": "range",
      "id": "heading_spacing",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Heading spacing",
      "default": 4
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Description color",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "row",
          "label": "Horizontal"
        },
        {
          "value": "column",
          "label": "Vertical"
        }
      ],
      "default": "row"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "spacing",
      "min": 8,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Spacing",
      "default": 16
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Icon with text"
    }
  ]
}
{% endschema %}
