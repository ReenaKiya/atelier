{% doc %}
  @prompt
    Create an icon with text block that displays a row of feature highlights with icons and text. Include settings for icon selection (shipping truck, gift/offers, return arrow, envelope/newsletter), customizable heading text, and description text for each feature. Design it as a clean, horizontal layout with evenly spaced icons and text that works responsively on mobile. Style should match Dawn theme with modern spacing and the ability to add multiple icon-text pairs within one block.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-features-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-icon-features-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-icon-features-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.spacing }}px;
    align-items: start;
  }

  .ai-icon-feature-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.alignment }};
    text-align: {{ block.settings.alignment }};
    gap: {{ block.settings.icon_text_gap }}px;
  }

  .ai-icon-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
  }

  .ai-icon-wrapper-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: {{ block.settings.icon_color }};
    fill: none;
    stroke-width: 1.5;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .ai-icon-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .ai-icon-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    color: {{ block.settings.heading_color }};
    margin: 0;
    line-height: 1.3;
    text-transform: {{ block.settings.heading_transform }};
  }

  .ai-icon-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-icon-features-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.spacing_mobile }}px;
    }

    .ai-icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size_mobile }}px;
      height: {{ block.settings.icon_size_mobile }}px;
    }

    .ai-icon-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .ai-icon-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size_mobile }}px;
    }
  }
{% endstyle %}

