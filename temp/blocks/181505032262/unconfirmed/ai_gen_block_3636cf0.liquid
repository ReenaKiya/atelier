{% doc %}
  @prompt
    Add a roller icon before the collapsible heading text. The icon should appear inline with the heading and maintain proper spacing. Use a simple, clean roller/paint roller SVG icon that matches the theme's style.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collapsible-heading-{{ ai_gen_id }} {
    width: 100%;
  }

  .ai-collapsible-button-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_spacing }}px;
    width: 100%;
    background: none;
    border: none;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    cursor: pointer;
    text-align: left;
    color: {{ block.settings.text_color }};
    transition: color 0.3s ease;
  }

  .ai-collapsible-button-{{ ai_gen_id }}:hover {
    color: {{ block.settings.text_hover_color }};
  }

  .ai-collapsible-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
    transition: color 0.3s ease;
  }

  .ai-collapsible-button-{{ ai_gen_id }}:hover .ai-collapsible-icon-{{ ai_gen_id }} {
    color: {{ block.settings.icon_hover_color }};
  }

  .ai-collapsible-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke-width: {{ block.settings.icon_stroke_width }};
  }

  .ai-collapsible-heading-text-{{ ai_gen_id }} {
    flex-grow: 1;
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    {% if block.settings.heading_uppercase %}
      text-transform: uppercase;
    {% endif %}
  }

  .ai-collapsible-content-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .ai-collapsible-content-{{ ai_gen_id }}.active {
    max-height: 1000px;
  }

  .ai-collapsible-content-inner-{{ ai_gen_id }} {
    padding: 0 {{ block.settings.padding_horizontal }}px {{ block.settings.padding_vertical }}px;
    color: {{ block.settings.content_color }};
  }

  .ai-collapsible-chevron-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  .ai-collapsible-chevron-{{ ai_gen_id }}.active {
    transform: rotate(180deg);
  }
{% endstyle %}

<collapsible-heading-{{ ai_gen_id }}
  class="ai-collapsible-heading-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <button
    class="ai-collapsible-button-{{ ai_gen_id }}"
    aria-expanded="false"
    type="button"
  >
    <span class="ai-collapsible-icon-{{ ai_gen_id }}">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
        <path d="M8 21h8"></path>
        <path d="M12 17v4"></path>
        <path d="M7 7h10"></path>
      </svg>
    </span>
    <h3 class="ai-collapsible-heading-text-{{ ai_gen_id }}">
      {{ block.settings.heading }}
    </h3>
    <svg
      class="ai-collapsible-chevron-{{ ai_gen_id }}"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </button>

  <div class="ai-collapsible-content-{{ ai_gen_id }}">
    <div class="ai-collapsible-content-inner-{{ ai_gen_id }}">
      {{ block.settings.content }}
    </div>
  </div>
</collapsible-heading-{{ ai_gen_id }}>

<script>
  (function() {
    class CollapsibleHeading{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.button = this.querySelector('.ai-collapsible-button-{{ ai_gen_id }}');
        this.content = this.querySelector('.ai-collapsible-content-{{ ai_gen_id }}');
        this.chevron = this.querySelector('.ai-collapsible-chevron-{{ ai_gen_id }}');

        this.button.addEventListener('click', () => {
          this.toggleContent();
        });

        {% if block.settings.open_by_default %}
          this.openContent();
        {% endif %}
      }

      toggleContent() {
        const isActive = this.content.classList.contains('active');
        
        if (isActive) {
          this.closeContent();
        } else {
          this.openContent();
        }
      }

      openContent() {
        this.content.classList.add('active');
        this.chevron.classList.add('active');
        this.button.setAttribute('aria-expanded', 'true');
      }

      closeContent() {
        this.content.classList.remove('active');
        this.chevron.classList.remove('active');
        this.button.setAttribute('aria-expanded', 'false');
      }
    }

    customElements.define('collapsible-heading-{{ ai_gen_id }}', CollapsibleHeading{{ ai_gen_id }});
  })();
</script>

