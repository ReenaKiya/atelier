{% doc %}
  @prompt
    Create a single-row icon with text block that displays exactly 4 features in one horizontal line. Each feature should have an icon above or beside the text. Include settings for 4 icon-text pairs with options for: 1) FREE SHIPPING with truck icon, 2) SPECIAL OFFERS with gift icon, 3) EASY RETURNS with return arrow icon, 4) VIP NEWSLETTER with envelope icon. Make the layout flex-based so all 4 items stay in one row on desktop and stack responsively on mobile. Use equal spacing between items and match Dawn theme styling with clean, modern design.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-features-row-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-features-container-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: {{ block.settings.item_spacing }}px;
    max-width: 100%;
    margin: 0 auto;
  }

  .ai-feature-item-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: {{ block.settings.layout_direction }};
    align-items: center;
    justify-content: center;
    gap: {{ block.settings.icon_text_gap }}px;
    text-align: center;
  }

  .ai-feature-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    color: {{ block.settings.icon_color }};
  }

  .ai-feature-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: currentColor;
    fill: none;
    stroke-width: {{ block.settings.icon_stroke_width }};
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .ai-feature-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: {{ block.settings.text_weight }};
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    line-height: 1.2;
  }

  @media screen and (max-width: 749px) {
    .ai-features-container-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.mobile_spacing }}px;
    }

    .ai-feature-item-{{ ai_gen_id }} {
      width: 100%;
      max-width: 300px;
    }

    .ai-feature-icon-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size }}px;
      height: {{ block.settings.mobile_icon_size }}px;
    }

    .ai-feature-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }
  }
{% endstyle %}

<feature-row-{{ ai_gen_id }} class="ai-features-row-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-features-container-{{ ai_gen_id }}">
    {% if block.settings.feature_1_enabled %}
      <div class="ai-feature-item-{{ ai_gen_id }}">
        <div class="ai-feature-icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M1 3h15v13H1zM16 8h6M16 12h6M16 16h6"></path>
            <circle cx="5.5" cy="18.5" r="2.5"></circle>
            <circle cx="18.5" cy="18.5" r="2.5"></circle>
          </svg>
        </div>
        <div class="ai-feature-text-{{ ai_gen_id }}">{{ block.settings.feature_1_text }}</div>
      </div>
    {% endif %}

    {% if block.settings.feature_2_enabled %}
      <div class="ai-feature-item-{{ ai_gen_id }}">
        <div class="ai-feature-icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <polyline points="20 12 20 22 4 22 4 12"></polyline>
            <rect x="2" y="7" width="20" height="5"></rect>
            <line x1="12" y1="22" x2="12" y2="7"></line>
            <path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"></path>
            <path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"></path>
          </svg>
        </div>
        <div class="ai-feature-text-{{ ai_gen_id }}">{{ block.settings.feature_2_text }}</div>
      </div>
    {% endif %}

    {% if block.settings.feature_3_enabled %}
      <div class="ai-feature-item-{{ ai_gen_id }}">
        <div class="ai-feature-icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <polyline points="9 14 4 9 9 4"></polyline>
            <path d="M20 20v-7a4 4 0 0 0-4-4H4"></path>
          </svg>
        </div>
        <div class="ai-feature-text-{{ ai_gen_id }}">{{ block.settings.feature_3_text }}</div>
      </div>
    {% endif %}

    {% if block.settings.feature_4_enabled %}
      <div class="ai-feature-item-{{ ai_gen_id }}">
        <div class="ai-feature-icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
        </div>
        <div class="ai-feature-text-{{ ai_gen_id }}">{{ block.settings.feature_4_text }}</div>
      </div>
    {% endif %}
  </div>
</feature-row-{{ ai_gen_id }}>

<script>
  (function() {
    class FeatureRow{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('feature-row-{{ ai_gen_id }}', FeatureRow{{ ai_gen_id }});
  })();
</script>

