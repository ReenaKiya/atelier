{% doc %}
  @prompt
    Create a custom section with a background image that includes:
    - A title positioned on the left side above the carousel
    - Collection navigation tabs on the right side that act as filters
    - A product carousel in the center-right area that dynamically changes based on which collection tab is selected
    - The carousel should display products from the selected collection
    - Smooth transitions when switching between collection tabs
    - Mobile-responsive layout where title and tabs stack vertically on smaller screens
    - Customizable background image, title text, and collection selections in the theme editor
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-carousel-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-collection-carousel-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
  }

  .ai-collection-carousel-container-{{ ai_gen_id }} {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collection-carousel-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 40px;
    gap: 20px;
  }

  .ai-collection-carousel-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0;
    flex: 0 0 auto;
  }

  .ai-collection-carousel-tabs-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  .ai-collection-carousel-tab-{{ ai_gen_id }} {
    background: {{ block.settings.tab_background }};
    color: {{ block.settings.tab_text_color }};
    border: 1px solid {{ block.settings.tab_border_color }};
    padding: 10px 20px;
    cursor: pointer;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    border-radius: {{ block.settings.tab_border_radius }}px;
  }

  .ai-collection-carousel-tab-{{ ai_gen_id }}:hover {
    background: {{ block.settings.tab_hover_background }};
    color: {{ block.settings.tab_hover_text_color }};
    border-color: {{ block.settings.tab_hover_border_color }};
  }

  .ai-collection-carousel-tab-{{ ai_gen_id }}.active {
    background: {{ block.settings.tab_active_background }};
    color: {{ block.settings.tab_active_text_color }};
    border-color: {{ block.settings.tab_active_border_color }};
  }

  .ai-collection-carousel-content-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-collection-carousel-track-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding-bottom: 10px;
  }

  .ai-collection-carousel-track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-collection-carousel-collection-{{ ai_gen_id }} {
    display: none;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .ai-collection-carousel-collection-{{ ai_gen_id }}.active {
    display: flex;
    opacity: 1;
  }

  .ai-collection-carousel-product-{{ ai_gen_id }} {
    flex: 0 0 280px;
    background: {{ block.settings.product_card_background }};
    border-radius: {{ block.settings.product_card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .ai-collection-carousel-product-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-collection-carousel-product-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
    background: #f5f5f5;
  }

  .ai-collection-carousel-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-carousel-product-info-{{ ai_gen_id }} {
    padding: 16px;
  }

  .ai-collection-carousel-product-title-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 600;
    margin: 0 0 8px;
    color: {{ block.settings.product_title_color }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-collection-carousel-product-price-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.product_price_color }};
  }

  .ai-collection-carousel-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: {{ block.settings.nav_button_background }};
    color: {{ block.settings.nav_button_color }};
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    z-index: 2;
  }

  .ai-collection-carousel-nav-{{ ai_gen_id }}:hover {
    background: {{ block.settings.nav_button_hover_background }};
    color: {{ block.settings.nav_button_hover_color }};
  }

  .ai-collection-carousel-nav-{{ ai_gen_id }}.prev {
    left: -20px;
  }

  .ai-collection-carousel-nav-{{ ai_gen_id }}.next {
    right: -20px;
  }

  .ai-collection-carousel-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.title_color }};
    font-size: 14px;
  }

  @media screen and (max-width: 768px) {
    .ai-collection-carousel-header-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
    }

    .ai-collection-carousel-tabs-{{ ai_gen_id }} {
      justify-content: flex-start;
      width: 100%;
    }

    .ai-collection-carousel-product-{{ ai_gen_id }} {
      flex: 0 0 220px;
    }

    .ai-collection-carousel-nav-{{ ai_gen_id }}.prev {
      left: 0;
    }

    .ai-collection-carousel-nav-{{ ai_gen_id }}.next {
      right: 0;
    }
  }
{% endstyle %}

<collection-carousel-{{ ai_gen_id }}
  class="ai-collection-carousel-{{ ai_gen_id }}"
  style="{% if block.settings.background_image %}background-image: url('{{ block.settings.background_image | image_url: width: 2000 }}');{% else %}background-color: {{ block.settings.background_color }};{% endif %}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.show_overlay %}
    <div class="ai-collection-carousel-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-collection-carousel-container-{{ ai_gen_id }}">
    <div class="ai-collection-carousel-header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-collection-carousel-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}

      <div class="ai-collection-carousel-tabs-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign collection_key = 'collection_' | append: i
            assign collection = block.settings[collection_key]
          %}
          {% if collection != blank %}
            <button
              class="ai-collection-carousel-tab-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
              data-collection-index="{{ forloop.index0 }}"
            >
              {{ collection.title }}
            </button>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="ai-collection-carousel-content-{{ ai_gen_id }}">
      {% assign has_collections = false %}
      {% for i in (1..5) %}
        {% liquid
          assign collection_key = 'collection_' | append: i
          assign collection = block.settings[collection_key]
        %}
        {% if collection != blank %}
          {% assign has_collections = true %}
          <div
            class="ai-collection-carousel-collection-{{ ai_gen_id }} ai-collection-carousel-track-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            data-collection-index="{{ forloop.index0 }}"
          >
            {% for product in collection.products limit: block.settings.products_per_collection %}
              <div class="ai-collection-carousel-product-{{ ai_gen_id }}">
                <a href="{{ product.url }}" class="ai-collection-carousel-product-link-{{ ai_gen_id }}">
                  <div class="ai-collection-carousel-product-image-{{ ai_gen_id }}">
                    {% if product.featured_image %}
                      <img
                        src="{{ product.featured_image | image_url: width: 600 }}"
                        alt="{{ product.featured_image.alt | escape }}"
                        loading="lazy"
                        width="600"
                        height="600"
                      >
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag }}
                    {% endif %}
                  </div>
                  <div class="ai-collection-carousel-product-info-{{ ai_gen_id }}">
                    <h3 class="ai-collection-carousel-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                    <div class="ai-collection-carousel-product-price-{{ ai_gen_id }}">
                      {{ product.price | money }}
                    </div>
                  </div>
                </a>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      {% endfor %}

      {% unless has_collections %}
        <div class="ai-collection-carousel-empty-{{ ai_gen_id }}">
          Select collections to display products
        </div>
      {% endunless %}

      {% if has_collections %}
        <button class="ai-collection-carousel-nav-{{ ai_gen_id }} prev" aria-label="Previous products">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="ai-collection-carousel-nav-{{ ai_gen_id }} next" aria-label="Next products">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      {% endif %}
    </div>
  </div>
</collection-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-collection-carousel-tab-{{ ai_gen_id }}');
        this.collections = this.querySelectorAll('.ai-collection-carousel-collection-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('.ai-collection-carousel-nav-{{ ai_gen_id }}.prev');
        this.nextBtn = this.querySelector('.ai-collection-carousel-nav-{{ ai_gen_id }}.next');
        this.currentIndex = 0;

        this.setupTabs();
        this.setupNavigation();
      }

      setupTabs() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const collectionIndex = parseInt(tab.dataset.collectionIndex);
            this.switchCollection(collectionIndex);
          });
        });
      }

      switchCollection(index) {
        this.tabs.forEach((tab, i) => {
          if (parseInt(tab.dataset.collectionIndex) === index) {
            tab.classList.add('active');
          } else {
            tab.classList.remove('active');
          }
        });

        this.collections.forEach((collection) => {
          const collectionIndex = parseInt(collection.dataset.collectionIndex);
          if (collectionIndex === index) {
            collection.classList.add('active');
            this.currentTrack = collection;
          } else {
            collection.classList.remove('active');
          }
        });

        this.currentIndex = index;
      }

      setupNavigation() {
        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', () => {
            const activeTrack = this.querySelector('.ai-collection-carousel-collection-{{ ai_gen_id }}.active');
            if (activeTrack) {
              activeTrack.scrollBy({
                left: -300,
                behavior: 'smooth'
              });
            }
          });
        }

        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', () => {
            const activeTrack = this.querySelector('.ai-collection-carousel-collection-{{ ai_gen_id }}.active');
            if (activeTrack) {
              activeTrack.scrollBy({
                left: 300,
                behavior: 'smooth'
              });
            }
          });
        }
      }
    }

    customElements.define('collection-carousel-{{ ai_gen_id }}', CollectionCarousel{{ ai_gen_id }});
  })();
</script>

