        <div>
          <h4 class="offer-title">{{ block.settings.fourth_offer_title }}</h4>
          <p>
            {{ block.settings.fourth_offer_information }}
            <span class="get-offer-btn">{{ block.settings.fourth_offer_button }}</span>
          </p>
        </div>
      </label>
    {% endif %}


  <!-- Offer 1 Info Hidden-->
    <div class="first-offer-info">
      <label for="none-offer-info-gm" class="close-offer-info-gm" aria-label="close button icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor" viewBox="0 0 16 16">
          <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
