          <h4 class="offer-title">{{ block.settings.third_offer_title }}</h4>
          <p>
            {{ block.settings.third_offer_information }}
            <span class="get-offer-btn">{{ block.settings.third_offer_button }}</span>
          </p>
        </div>
      </label>
    {% endif %}

     <!-- Offer 4 -->
    {% if show_fourth_offer %}
