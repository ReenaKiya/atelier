  Renders gm show offer block on product pages

  Accepts:
  - block: {Object} passes in the block information.


  Usage:
  {% render 'gm-show-offers',
    block: block
  %}
{% endcomment %}

{%- liquid
  assign show_first_offer = block.settings.show_first_offer
  assign show_second_offer = block.settings.show_second_offer
  assign show_third_offer = block.settings.show_third_offer
  assign show_fourth_offer = block.settings.show_fourth_offer
-%}
<style>
  .offer-display-content label.offer-label{
    background: {{ block.settings.gm_offer_bg }};
    border: 1px dashed {{ block.settings.gm_offer_border_color }};
  }
  .offer-display-content label span.get-offer-btn {
    background-color: {{ block.settings.offer_button_bg }}; 
    color: {{ block.settings.offer_button_text }}; 
  }  
</style>

{{ 'gm-show-offers.css' | asset_url | stylesheet_tag }}

<p style="text-transform: uppercase; font-weight: 500; font-size: 1.5rem;">{{ block.settings.main_title }}</p>
<div class="genius-maker-offer-info-container" aria-label="namaste silver offer information">
  <div class="offer-display-content">
    <!-- Offer 1 -->
    {% if show_first_offer %}
      <input type="radio" name="offer-info-gm" id="first-offer">
      <label for="first-offer" class="offer-label" aria-label="{{ block.settings.first_offer_information }}">
        <div>
          <h4 class="offer-title">{{ block.settings.first_offer_title }}</h4>
          <p>{{ block.settings.first_offer_information }}
            <span class="get-offer-btn">{{ block.settings.first_offer_button }}</span>
          </p>
        </div>
      </label>
    {% endif %}

    <!-- Offer 2 -->
    {% if show_second_offer %}
      <input type="radio" name="offer-info-gm" id="second-offer">
      <label for="second-offer" class="offer-label" aria-label="{{ block.settings.second_offer_information }}">
        <div>
          <h4 class="offer-title">{{ block.settings.second_offer_title }}</h4>
          <p>{{ block.settings.second_offer_information }}
            <span class="get-offer-btn">{{ block.settings.second_offer_button }}</span>
          </p>
        </div>
      </label>
    {% endif %}

    <!-- Offer 3 -->
    {% if show_third_offer %}
      <input type="radio" name="offer-info-gm" id="third-offer">
      <label for="third-offer" class="offer-label" aria-label="{{ block.settings.third_offer_information }}">
